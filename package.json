{
  "name": "chat-media-view",
  "version": "0.2.0",
  "description": "Telegram-style responsive media grid for React chat applications. Features BlurHash placeholders, built-in lightbox with zoom/pan/navigation, lazy loading, accessibility (ARIA, keyboard, RTL), and video support.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/chat-media-view.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:strict": "eslint src/ --max-warnings 0",
    "storybook": "storybook dev -p 6006 2>&1 | tee logs/dev.log",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build && npm run test",
    "prepare": "husky"
  },
  "keywords": [
    "react",
    "image-grid",
    "chat",
    "telegram",
    "media",
    "gallery",
    "virtual-list",
    "blurhash",
    "lightbox",
    "accessibility",
    "rtl"
  ],
  "author": "hvantoan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hvantoan/chat-media-view.git"
  },
  "homepage": "https://hvantoan.github.io/chat-media-view",
  "bugs": {
    "url": "https://github.com/hvantoan/chat-media-view/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "playwright": "^1.57.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "blurhash": "^2.0.5"
  }
}
